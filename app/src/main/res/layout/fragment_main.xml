<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MainFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="314dp"
            android:background="#8E24AA"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linerAvatar"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_info"
                    android:src="@drawable/useritem"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/radius"/>
                <TextView
                    android:id="@+id/tvHello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello Khanh"
                    android:textSize="15dp"
                    android:textColor="#ffff"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <ScrollView
                android:layout_width="367dp"
                android:layout_height="209dp"
                android:background="@drawable/radius"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_below="@id/linerAvatar"
                android:layout_centerHorizontal="true">
                <LinearLayout
                    android:layout_width="367dp"
                    android:layout_height="209dp"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">
                        <LinearLayout
                            android:layout_width="78dp"
                            android:layout_height="77dp"
                            android:layout_marginTop="20dp">
                            <ImageView
                                android:id="@+id/iv_NguoiDung"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/usermn"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="78dp"
                            android:layout_height="77dp"
                            android:layout_marginLeft="80dp"
                            android:layout_marginTop="20dp">
                            <ImageView
                                android:id="@+id/iv_HoaDon"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/hoadon"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">
                        <LinearLayout
                            android:layout_width="78dp"
                            android:layout_height="77dp"
                            android:layout_marginTop="20dp">
                            <ImageView
                                android:id="@+id/iv_Menu"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/menu"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="78dp"
                            android:layout_height="77dp"
                            android:layout_marginLeft="80dp"
                            android:layout_marginTop="20dp">
                            <ImageView
                                android:id="@+id/iv_ThongKe"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/thongke"/>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">
                        <LinearLayout
                            android:layout_width="78dp"
                            android:layout_height="77dp"
                            android:layout_marginTop="20dp">
                            <ImageView
                                android:id="@+id/iv_customer"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/customer1"/>
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </ScrollView>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ViewFlipper
                android:id="@+id/viewFlipper"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/d"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/toancanh1"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/toancanh"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/lau"/>
            </ViewFlipper>
        </RelativeLayout>
    </LinearLayout>



</FrameLayout>