<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ThongKeSanPhamFragment"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@id/linner1">
        <Button
            android:id="@+id/btnTuNgay"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:hint="Từ ngày"
            android:textSize="15dp"
            android:gravity="center"
            android:background="#8E24AA"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />
        <Button
            android:id="@+id/btnDenNgay"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:hint="Đến ngày"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:background="#8E24AA"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"/>
        <Button
            android:id="@+id/btnTK"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:hint="Thống kê"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:background="#8E24AA"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_topSP"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"/>

</LinearLayout>